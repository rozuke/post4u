{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "printWidth": 80,
  "overrides": [
    {
      "files": "**/*.html",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "**/*.component.html",
      "options": {
        "parser": "angular"
      }
    }
  ]
}
